{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "ES5", "ES2015", "ES2016", "ESNext"],
    "module": "ES2015",
    "moduleResolution": "Node",
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "outDir": "dist/esm",
    "sourceMap": true,
    "strict": true,
    "target": "ES5",
    "types": ["node"]
  },
  "exclude": ["node_modules"],
  "include": ["src"]
}
